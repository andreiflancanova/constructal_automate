{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\constructal_automate\\manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "constructal_automate.settings"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}